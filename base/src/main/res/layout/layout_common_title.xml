<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_title_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    android:minHeight="@dimen/title_bar_height"
    app:popupTheme="@style/Toolbar.PopupStyle"
    app:theme="@style/ToolbarStyle">
    <!--防止ActionBar会和状态栏混在一起  fitsSystemWindows-->

    <TextView
        android:id="@+id/layout_title_title_tv"
        style="@style/text_dark_high"
        android:layout_gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="10"
        tools:text="title" />

    <TextView
        android:id="@+id/layout_title_right_tv"
        style="@style/text_dark_middle"
        android:layout_gravity="right"
        android:maxLength="12"
        android:paddingRight="@dimen/common_padding"
        android:visibility="gone"
        tools:text="发布" />

    <ImageView
        android:id="@+id/layout_title_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="@dimen/common_padding"
        android:visibility="gone" />


</android.support.v7.widget.Toolbar>