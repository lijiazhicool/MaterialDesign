<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/m_layout_error_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_network_error" />

    <TextView
        android:id="@+id/m_layout_error_title_iv"
        style="@style/text_light_middle"
        android:layout_marginTop="15dp"
        android:text="@string/error_network_msg" />

    <TextView
        android:id="@+id/m_layout_error_subtitle_tv"
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/bg_retry_button"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_size_middle"
        android:text="@string/error_retry_msg" />

</LinearLayout>