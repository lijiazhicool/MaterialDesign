<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/m_layout_empty_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/m_icon_loading_error" />

    <TextView
        android:id="@+id/m_layout_empty_title_tv"
        style="@style/text_light_middle"
        android:layout_marginTop="15dp"
        android:text="@string/error_empty_msg" />

    <TextView
        android:id="@+id/m_layout_empty_subtitle_tv"
        style="@style/text_light_middle"
        android:layout_marginTop="15dp"
        tools:text="subtitle" />


</LinearLayout>